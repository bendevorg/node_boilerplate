{
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "plugin:node/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:promise/recommended",
    "prettier"
  ],
  "globals": {
    "document": false,
    "navigator": false,
    "window": false
  },
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "node/no-unpublished-require": "off",
    "curly": ["error", "all"]
  }
}
