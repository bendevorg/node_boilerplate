{
  "name": "boilerplate",
  "version": "3.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "node tools/startServer.ts",
    "prod": "npm run env_setup_production && npm run server_production",
    "dev": "npm run env_setup_development && npm run server_development",
    "build": "tsc",
    "env_setup_production": "node dist/tools/setupEnv.js production",
    "server_production": "node -r dotenv/config dist/tools/startServer.js",
    "docker_production": "docker-compose build --build-arg environment=prd && docker-compose up --abort-on-container-exit",
    "env_setup_development": "ts-node tools/setupEnv.ts development",
    "server_development": "nodemon tools/startServer.ts",
    "docker_dev": "docker-compose build --build-arg environment=dev && docker-compose up --abort-on-container-exit",
    "test": "npm run env_setup_development && nyc --reporter=html --reporter=text mocha test/runTests.js --timeout 10000",
    "docker_test": "docker-compose build --build-arg environment=test && docker-compose up --abort-on-container-exit",
    "coverage": "nyc report --reporter=text-lcov | codacy-coverage && rm -rf ./coverage",
    "apidoc": "apidoc -i server/controllers/ -o docs/",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "express": "4.17.1",
    "joi": "17.4.1",
    "log-champ": "2.0.2"
  },
  "devDependencies": {
    "@types/express": "4.17.13",
    "@types/joi": "17.2.3",
    "@types/node": "16.4.7",
    "@typescript-eslint/eslint-plugin": "4.28.5",
    "@typescript-eslint/parser": "4.28.5",
    "apidoc": "0.28.1",
    "chai": "4.3.4",
    "codacy-coverage": "3.4.0",
    "docker-compose": "0.23.13",
    "eslint": "7.31.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "5.1.0",
    "eslint-plugin-standard": "5.0.0",
    "faker": "5.5.3",
    "mocha": "9.0.3",
    "nodemon": "^2.0.12",
    "nyc": "15.1.0",
    "supertest": "6.1.4",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  }
}